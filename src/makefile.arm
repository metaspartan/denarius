denariusd: $(OBJS:obj/%=obj/%)
	$(LINK) $(xCXXFLAGS) -o $@ $^ $(xLDFLAGS) $(LIBS)

clean:
	-rm -f denariusd
	-rm -f obj/*.o
	-rm -f obj/*.P
	-rm -f obj/*.d
	-rm -f obj/build.h -rm -f obj/tor/*.o -rm -f obj/tor/*.P
	-cd leveldb && $(MAKE) clean || true

